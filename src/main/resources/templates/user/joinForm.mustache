{{>/user/header}}

<div class="container">
    <div class="my_auth_box">
        <div class="my_auth_form_box">
            <div class="my_auth_form_box_title">Tistory</div>
            <form action="/join" method="POST">
                <input class="my_auth_form_box_input" type="text" name="username" placeholder="유저네임" maxlength="20" />
                <input class="my_auth_form_box_input" type="password" name="password" placeholder="비밀번호"
                    maxlength="20" />
                <input class="my_auth_form_box_input" type="password" name="" placeholder="비밀번호 확인" maxlength="20" />
                <input class="my_auth_form_box_input" type="email" name="email" placeholder="이메일" maxlength="60" />
                <button type="submit" class="my_secondary_btn">회원가입</button>
            </form>
            <div class="my_auth_form_box_link">
                <div><a href="/login-form">로그인</a></div>
                <div>비밀번호 찾기</div>
            </div>
        </div>
    </div>
</div>

{{>/layout/footer}}